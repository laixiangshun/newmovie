extends ../layout
block content
    .container
        .row.page-header
            each item in movies
                .col-md-2
                    .thumbnail
                        a(href="/movie/#{item._id}")
                         img(src="#{item.poster}",alt="#{item.title}" height="200")
                         .caption
                             h4 #{item.title}
                             p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 查看详情
