extends ../layout
block content
   .container
      .row.page-header
            .panel.panel-default
               .panel-heading
                  h3 #{keyword}
               .panel-body
                  if movies && movies.length>0
                     each item in movies
                        .col-md-2
                           .thumbnail
                              a(href="/movie/#{item._id}")
                                 img(src="#{item.poster}",alt="#{item.title}" height="200")
                                 .caption
                                    h4 #{item.title}
                                    p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 查看详情
            ul.pagination
               - for (var i = 0; i < totalPage; i++){
                  - if ((i+1) == currentPage ){
                        li.active
                          span #{currentPage}
                  - }
                  - else{
                        li
                          a(href='/results?#{query}&p=#{i}') #{i+1}
                  - }
               - }

