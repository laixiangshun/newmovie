extends ../layout
block content
    .container
        .row.page-header.clearfix
            each cat in catetories
                .panel.panel-default
                    .panel-heading
                        h3
                            a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
                    .panel-body
                        .row
                            if cat.movies && cat.movies.length>0
                                each item in cat.movies
                                    .col-md-2.col-sm-6
                                        .thumbnail
                                            a(href="/movie/#{item._id}")
                                                if item.poster.indexOf('http') > -1
                                                    img(src="#{item.poster}",alt="#{item.title}" style={'height': '200px','width': '100%'})
                                                else
                                                    img(src="/upload/#{item.poster}",alt="#{item.title}")
                                            .caption
                                                 h4 #{item.title}
                                                 p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 查看详情

